<h1>Eat-Da-Burger!</h1>

<h5>Click on the blue button to devour burger!</h5>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        {{#each burgers}}
          {{#unless devoured}}
            <div>
              <form action="/burgers/{{this.id}}" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.id}}.{{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.id}}. {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Enter the burger you want to eat, then on the button below</h2>

<div class="row">
  <div class="col s12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="">
      <button type="submit" class="addBurgerButton">Place Your Order</button>
    </form>
  </div>
</div>